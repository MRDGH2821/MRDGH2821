{
  "$schema": "https://json.schemastore.org/markdownlint.json",
  "MD004": false,
  "MD007": {
    "indent": 2
  },
  "MD013": {
    "line_length": 400
  },
  "MD024": {
    "siblings_only": true
  },
  "MD026": {
    "punctuation": ".,;:!。，；:"
  },
  "MD029": false,
  "MD033": false,
  "MD036": false,
  "MD060": {
    "style": "aligned"
  },
  "blank_lines": false,
  "line-length": {
    "strict": false,
    "tables": false
  },
  "no-inline-html": {
    "allowed_elements": ["br", "iframe"]
  }
}
