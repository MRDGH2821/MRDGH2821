{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Mega lint",
      "type": "shell",
      "command": "npx -y mega-linter-runner --flavor documentation",
      "group": {
        "kind": "none",
        "isDefault": true
      }
    },
    {
      "label": "Jekyll Serve",
      "type": "process",
      "command": "bundle",
      "args": ["exec", "jekyll", "serve", "--livereload"],
      "group": {
        "kind": "none",
        "isDefault": true
      }
    },
    {
      "label": "Sort Table in Current Markdown File",
      "type": "shell",
      "command": "npx",
      "args": ["@fmma-npm/sort-markdown-tables", "-i", "${file}"],
      "group": {
        "kind": "none",
        "isDefault": true
      }
    }
  ]
}
